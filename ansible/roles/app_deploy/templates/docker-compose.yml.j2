services:
  backend:
    image: ghcr.io/laurisneimanis/ccore-ai-demo-backend:latest
    container_name: ccore-backend
    restart: unless-stopped
    environment:
      CHROMA_HOST: chroma
      CHROMA_PORT: 8001
    depends_on:
      - chroma

  frontend:
    image: ghcr.io/laurisneimanis/ccore-ai-demo-frontend:latest
    container_name: ccore-frontend
    restart: unless-stopped
    environment:
      STREAMLIT_SERVER_ADDRESS: "0.0.0.0"
      STREAMLIT_SERVER_PORT: "8501"
      STREAMLIT_SERVER_ENABLE_CORS: "false"
    depends_on:
      - backend

  chroma:
    image: chromadb/chroma:1.3.5
    container_name: ccore-chroma
    restart: unless-stopped
    volumes:
      - chroma_data:/chroma

  nginx:
    image: nginx:1.29.3
    container_name: ccore-nginx
    restart: unless-stopped
    depends_on:
      - frontend
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro

volumes:
  chroma_data:
