services:
  python-demo-app:
    build: ./python-demo-app
    container_name: python-demo-app
    restart: unless-stopped

  nginx:
    image: nginx:1.29.3
    container_name: nginx-proxy
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/certs:/etc/nginx/certs:ro
    depends_on:
      python-demo-app:
        condition: service_healthy
    restart: unless-stopped
